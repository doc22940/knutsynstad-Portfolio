				+project('The construction of Apple Park.', 'images/Apple_Thumbnail.png', '/the_construction_of_apple_park/')(class="information coding")
				+project('Mapping family caregiving.', 'images/Caremaps_0.png', 'mapping_family_caregiving/')(class="information")
				+project('From sensors to action.', 'images/Sensors_Thumbnail.svg', '/from_sensors_to_action/')(class="information")
				+project('Modeling diabetes.', 'images/Diabetes_Thumbnail.png', '/modeling_diabetes/')(class="uiux information")
				+project('A pictogram is worth a thousand words.', 'images/Iconography_00.gif', 'a_pictogram_is_worth_a_thousand_words/')(class="information")
				+project('Mapping social shopping.', 'images/Sello_Thumbnail.png', '/mapping_social_shopping/')(class="uiux")
				+project('Smarter testing for better health.', 'images/AST_Thumbnail.svg', '/smarter_testing_for_better_health/')(class="print coding")
				+project('Measuring corn production, in every county, every day.', 'images/Corn_Thumbnail.gif', '/measuring_corn_production_in_every_county_every_day/')(class="print information")
				+project('Moving mountains to shape the future.', 'images/100_People_00.jpg', 'moving_mountains_to_shape_the_future/')(class="print")
				+project('Mr. Potato Head is for the birds.', 'images/Birdhouse_00.jpg', '/mr_potato_head_is_for_the_birds/')(class="packaging")
				+project('The truth is not always black & white.', 'images/Margin_of_Error_00.jpg', '/the_truth_is_not_always_black_and_white/')(class="print packaging")
				+project('Remedies come in all shapes and flavors.', 'images/Earthnuts_00.jpg', '/remedies_come_in_all_shapes_and_flavors/')(class="packaging")
				+project('Winding down gets a little help.', 'images/Seagrams_00.jpg', '/winding_down_gets_a_little_help/')(class="print")
				+project('Gardeners always get their hands in the dirt.', 'images/French_Paper_00.jpg', '/gardeners_always_get_their_hands_in_the_dirt/')(class="packaging")
				+project('Without the past, there is no future.', 'images/Befor_00.jpg', '/without_the_past_there_is_no_future/')(class="print uiux")
				+project('Raise your glass to Dorian Gray.', 'images/Magnolia_00.jpg', '/raise_your_glass_to_dorian_gray/')(class="packaging")
				+project('Looking beyond the walls.', 'images/sweet_tooth_thumbnail.jpg', '/looking_beyond_the_walls/')(class="print")
				+project('Winning is the only way to play the game.', 'images/Elite_Raiders_00.jpg', '/winning_is_the_only_way_to_play_the_game/')(class="print")

		section.contact#contact
			h2 Get in touch.
			form(action="https://formspree.io/knut@synstad.net" method="POST").form-contact
				.input-group
					label(for="name") Name
					input#name(type="text" placeholder="Required" name="name")
				.input-group
					label(for="email") Email
					input#email(type="email" placeholder="Required" name="_replyto")
				.input-group
					label(for="message") Message
					textarea#message(placeholder="Required" name="message")
				input(type="hidden" name="_next" value="thanks.html")
				input(type="hidden" name="_subject" value="New message from portfolio")
				input(type="hidden" name="_format" value="plain")
				input(type="text" name="_gotcha" style="display:none")
				input(type="submit" value="Send")

		footer
			ul.social-media
				li: a(href="https://twitter.com/knutsynstad" target="_blank")
					svg.icon: use(xlink:href='#icon-twitter')
				li: a(href="https://www.linkedin.com/in/knutsynstad" target="_blank")
					svg.icon: use(xlink:href='#icon-linkedin')
				li: a(href="https://github.com/knutsynstad/" target="_blank")
					svg.icon: use(xlink:href='#icon-github')
